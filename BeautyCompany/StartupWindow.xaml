<Window x:Class="BeautyCompany.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautyCompany"
        mc:Ignorable="d"
        Title="Салон красоты" Height="500" Width="800"
        Icon="Resources/beauty_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FFE1E4FF"></Grid>
        <TextBlock Text="Beauty" FontFamily="Tahoma" FontSize="44" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center"></TextBlock>
        <Image Source="Resources/beauty_logo.png" Width="55" Margin="10" HorizontalAlignment="Left"></Image>
        <Button x:Name="btnBack" Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Center"></Button>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"></Frame>
    </Grid>
</Window>
