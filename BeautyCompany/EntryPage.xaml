<Page x:Class="BeautyCompany.EntryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautyCompany"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EntryPage">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="clientMenu" Content="Клиент" Width="160" Height="60" FontSize="18" Margin="16" Click="clientMenu_Click"></Button>
            <Button x:Name="adminMenu" Content="Администратор" Width="160" Height="60" FontSize="18" Margin="16" Click="adminMenu_Click"></Button>
        </StackPanel>
        
    </Grid>
</Page>
