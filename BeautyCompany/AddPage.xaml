<Page x:Class="BeautyCompany.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautyCompany"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage">

    <Grid>
        <StackPanel>
            <TextBox x:Name="txtTitle" Text="{Binding Title}" Width="200" Margin="16"></TextBox>
            <TextBox x:Name="txtCost" Text="{Binding Cost}" Width="200" Margin="16"></TextBox>
            <TextBox x:Name="txtDuration" Text="{Binding DurationInSeconds}" Width="200" Margin="16"></TextBox>
            <TextBox x:Name="txtDesc" Text="{Binding Description}" Width="200" Margin="16"></TextBox>
            <TextBox x:Name="txtDiscount" Text="{Binding Discount}" Width="200" Margin="16"></TextBox>
            <Button x:Name="txtSave" Content="Сохранить" Click="txtSave_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
